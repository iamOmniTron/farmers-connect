{{>navbar}}
<div class="container">
  {{#if success}}
  <div class="alert alert-success col-6 mx-auto position-fixed h-10 opacity-5 text-center z-index-n1 w-100">
    {{success}}
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-danger position-fixed h-10 opacity-5 text-center z-index-n1">
    {{error}}
  </div>
  {{/if}}
</div>
<div class="container">
    <div class="main-body">

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>{{user.name}}</h4>
                      <p class="text-secondary mb-1">{{role}}</p>
                      <p class="text-muted font-size-sm">Nasarawa State University,Keffi</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                    <span class="text-secondary">
                      <a href='/{{#if isFarmer}}dashboard{{/if}}' style="text-decoration:none">Farmers connect</a>
                      </span>
                  </li>
                </ul>
              </div>
            </div>
            <div class=" container col-md-8 align-self-center">
              <div class="card mb-3 ">
                <div class="card-body">
                  <div class="row ">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{user.name}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{user.email}}
                    </div>
                  </div>
                  <hr>
                  {{#if farmer}}
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Store</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <!-- Bay Area, San Francisco, CA -->
                      <a href=`/farmer/{{store.id}}`>{{store.name}}</a>
                    </div>
                  </div>
                  <hr>
                  {{/if}}
                 <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Contact</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{phone}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
    </div>
