{{>navbar}}
<div class="container">
  {{#if success}}
  <div class="alert alert-success col-6 mx-auto position-fixed h-10 opacity-5 text-center z-index-n1 w-100">
    {{success}}
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-danger col-6 mx-auto position-fixed h-10 opacity-5 text-center z-index-n1 w-100">
    {{error}}
  </div>
  {{/if}}
</div>
<div class="container">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col" style="width:25%">Id</th>
      <th scope="col"style="width:40%">Items</th>
      <th scope="col"style="width:25%" colspan="2">Amount</th>
    </tr>
  </thead>
  <tbody>
      {{#each transactions}}
    <tr>
      <td>
          <div class="row">
                {{!-- <div class="col-sm-2 hidden-xs"><img src={{imageUrl}} alt="item" class="img-responsive img-thumbnail"/></div> --}}
                <div class="col-sm-10 align-item-center text-capitalize">
                     {{TransactionId}}
                </div>
            </div>
      </td>
      <td class="align-item-center text-wrap">{{name}}</td>
      <td class="align-item-center">₦{{price}}</td>
      <td>
        </td>
    </tr>
    {{/each}}
  </tbody>
<tfoot>
        <tr>
            <td>
                <a href="/" class="btn btn-warning">
                <i class="fa fa-angle-left"></i> Go To Catalogue
                </a>
            </td>
            <td  class="hidden-xs"></td>
            <td class="hidden-xs text-start"><strong>Total : ₦{{total}}</strong></td>
            <td>
            </td>
        </tr>
	</tfoot>
</table>
</div>
