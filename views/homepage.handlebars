{{>navbar}}
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {{#each product}}
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{description}}</p>
          <a href="#" class="btn btn-success">Add to cart</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
