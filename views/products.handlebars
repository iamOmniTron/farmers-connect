<div class="container-fluid mt-5 mb-5">
    <div class="row g-2">
        <div class="col-md-3">
        {{#each products}}
        <div class="col-md-9">
            <div class="row g-2">
                <div class="col-md-4">
                    <div class="product py-4">
                        <div class="text-center"> <img src={{imageUrl.subString(7)}} width="200"> </div>
                        <div class="about text-center">
                            <h5>{{name}}</h5> <span>NGN{{price}}</span>
                        </div>
                        <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center"> <button class="btn btn-success text-uppercase">Add to cart</button>
                            <div class="add"> <span class="product_fav"><i class="fa fa-heart-o"></i></span> <span class="product_fav"><i class="fa fa-opencart"></i></span> </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>