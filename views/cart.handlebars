{{>navbar}}
<div class="container">
  {{#if success}}
  <div class="alert alert-success col-6 mx-auto position-fixed h-10 opacity-5 text-center z-index-n1 w-100">
    {{success}}
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-danger col-6 mx-auto position-fixed h-10 opacity-5 text-center z-index-n1 w-100">
    {{error}}
  </div>
  {{/if}}
</div>
<div class="container">
    {{#if products}}
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col" style="width:25%">Name</th>
      <th scope="col"style="width:40%">Description</th>
      <th scope="col"style="width:25%" colspan="2">Price</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <td>
          <div class="row">
                <div class="col-sm-2 hidden-xs"><img src={{imageUrl}} alt="item" class="img-responsive img-thumbnail"/></div>
                <div class="col-sm-10 align-item-center text-capitalize">
                     {{name}}
                </div>
            </div>
      </td>
      <td class="align-item-center text-wrap">{{description}}</td>
      <td class="align-item-center">₦{{price}}</td>
      <td>
          <form action="/cart/remove/{{id}}/" method="post">
            <button type="submit" class="btn btn-danger btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg>
            </button>
            </form>
        </td>
    </tr>
    {{/each}}
  </tbody>
<tfoot>
        <tr>
            <td>
                <a href="/" class="btn btn-warning">
                <i class="fa fa-angle-left"></i> Continue Shopping
                </a>
            </td>
            <td  class="hidden-xs"></td>
            <td class="hidden-xs text-start"><strong>Total : ₦{{total}}</strong></td>
            <td>
                
            <button type="submit" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#checkoutModal">
                Proceed To Checkout
                </button> 
               
            </td>
        </tr>
	</tfoot>
</table>
<div class="modal fade" id="checkoutModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Thanks {{user.name}}!!</h4>
            <form action="/checkout" method="get">
            <button type="submit" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
             </form>
        </div>
        <div class="modal-body bg-success">
            <div class="send-success text-white"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
  <path d="M13.485 1.431a1.473 1.473 0 0 1 2.104 2.062l-7.84 9.801a1.473 1.473 0 0 1-2.12.04L.431 8.138a1.473 1.473 0 0 1 2.084-2.083l4.111 4.112 6.82-8.69a.486.486 0 0 1 .04-.045z"/>
</svg> Your order has been placed successfully</div>
        </div>
        <div class="modal-footer">
        </div>
    </div>
  </div>
</div>
{{/if}}
{{#if isEmpty}}
  <div class="row">
<h3 class="text-center align-self-center">Cart Is Empty</h3>
  </div>
{{/if}}
</div>
